    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= user.name %>さん</h3>
      </div>
      <div class="panel-body">
        <h4>ユーザ属性</h4>
        <div><span class="glyphicon glyphicon-user <%= user_icon(user) %>" aria-hidden="true"></span><%= user.user_class %></div>
        <h4>自己紹介</h4>
        <div><%= simple_format(user.user_introduction) %></div>
        <hr>
        <h4>ブログ・ホームページ</h4>
        
        <%= link_to user.site_name, user.user_url %>
      </div>
    </div>
    <div class = "flex">
      <%= render 'relationships/follow_button', user: user %>
      <%= render 'machines/new_button', user: user %>
    </div>