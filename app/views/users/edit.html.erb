<div class="text-center">
  <h1>ユーザ情報編集</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :user_introduction, '自己紹介' %>
        <%= f.text_area :user_introduction, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :site_name, 'ホームページ・ブログ名' %>
        <%= f.url_field :site_name, class: 'form-control' %>
      </div>
      

      <div class="form-group">
        <%= f.label :user_url, 'ホームページ・ブログのURL' %>
        <%= f.url_field :user_url, class: 'form-control' %>
      </div>
      
      <%= f.submit '編集を確定', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>