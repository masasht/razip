<ul>
  <% microposts.each do |micropost| %>
    <% user = micropost.user %>

      <li>
        <p><%= micropost.content %>
          <% if current_user == micropost.user %>
          <%= link_to "削除", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </p>
        <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        <% if current_user == micropost.user %>
        <%= link_to "削除", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
        <% end %>
      </li>
  <% end %>
  <%= paginate microposts %>