      <%= hidden_field_tag :interest, 'Have' %>
      <%= submit_tag '持ってる！', class: 'btn btn-primary btn-want-have' %>
    <% end %>
    <%= form_tag(destroy_ownership, method: :delete) do %>
      <%= hidden_field_tag :interest, 'Want' %>
      <%= submit_tag 'ほしい', class: 'btn btn-primary' %>
