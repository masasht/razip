  <% if current_user.have?(item) %>
    <%= form_tag(destroy_ownership, method: :delete) do %>
      <%= hidden_field_tag :interest, 'Have' %>
      <%= submit_tag '持ってる', class: 'btn btn-primary' %>
    <% end %>
    <div class = "text-left">感想などコメント欄から投稿をお願いします！！</div>
  <% elsif current_user.want?(item) %>
