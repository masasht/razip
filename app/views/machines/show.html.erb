<div class="row">
  <h2><%= @machine.machine_name %></h2>
  <div class = "col-sm-8">
    <div>
      <%= image_tag @machine.image_url, class: 'img-100' %>
    </div>
    <div class = "flex machine_clips">
      <% if logged_in? %>
        <%= render 'clips/clip_button', machine: @machine %>
      <% else %>
          ログインするとクリップできます。
      <% end %>
      <%= render 'clips/clip_counts', machine: @machine %>
    </div>
  </div>
  <div class = "col-sm-4">
    <div class="panel panel-default">

      <ul class="list-group">
        <li class="list-group-item">オーナー：<%= link_to @machine.user.name, user_path(@machine.user_id) %></li>
        <li class="list-group-item">キット：<%= link_to @machine.kit.name, kit_path(@machine.kit_id) %></li>
        <li class="list-group-item">キット：<%= link_to @machine.kit.name, kit_path(@machine.kit_id) %></li>
        <li class="list-group-item">モーター：<%= link_to @machine.motor.name, motor_path(@machine.motor_id) %></li>
        <li class="list-group-item">ESC：<%= link_to @machine.esc.name, esc_path(@machine.esc_id) %></li>
        <li class="list-group-item">サーボ：<%= link_to @machine.servo.name, servo_path(@machine.servo_id) %></li>
        <li class="list-group-item">受信機：<%= link_to @machine.recevier.name, recevier_path(@machine.recevier_id) %></li>
        <li class="list-group-item">クラス：<%= @machine.regulation %></li>
        <li class="list-group-item">その他仕様：<br><%= simple_format(@machine.other) %></li>
      </ul>
    </div>
    <% if logged_in? %>
      <%= render 'machines/edit_button', machine: @machine %>
    <% end %>
  </div>
  <div class = "col-sm-10 col-sm-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">オーナーのコメント</div>
      <div class="panel-body"><%= simple_format(@machine.information) %></div>
  </div>
</div>
