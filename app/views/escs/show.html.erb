<div class="row page-title">
  <div class = "blank-area1 col-sm-1 col-md-1 col-lg-1 hidden-xs"></div>
  <div class = "col-xs-12 col-sm-10 col-md-10 col-lg-10">
    <h2 class = "on-white"><%= @esc.name %></h2>
  </div>
  <div class = "blank-area2 col-sm-1 col-md-1 col-lg-1 hidden-xs"></div>

  <div class = "blank-area1 col-sm-1 col-md-1 col-lg-1 hidden-xs"></div>
  <div class = "col-xs-12 col-sm-5 com-md-5 col-lg-5">
    in preparation
  </div>
  <div class = "col-xs-12 col-sm-5 com-md-5 col-lg-5">
    <% if logged_in? && current_user.admin? %>
      <%= link_to 'アイテム編集', edit_esc_path(@esc) %>
    <% end %>
    <div class = "item-specs">
      <blockquote>
        <dl>
          <dt>メーカー</dt>
          <dd><%= @esc.maker.maker_name %></dd>
          <dt>定価</dt>
          <dd><%= @esc.list_price %> <span>円</span></dd>
          <dt>モータータイプ</dt>
          <dd><%= @esc.motor_type %></dd>
          <dt>センサー</dt>
          <dd><%= @esc.sencor %></dd>
          <dt>対応ターン数</dt>
          <dd><%= @esc.turn %> T<span>以上</span></dd>
          <dt>入力電圧</dt>
          <dd><%= @esc.input_current %><span> V</span></dd>
          <dt>瞬間最大電流</dt>
          <dd><%= @esc.output_current_max %><span> A</span></dd>
          <dt>連続最大電</dt>
          <dd><%= @esc.output_current %><span> A</span></dd>
          <dt>抵抗値</dt>
          <dd><%= @esc.ohm %><span> Ω</span></dd>
          <dt>BEC(-A/-V)</dt>
          <dd><%= @esc.bec %></dd>
          <dt class = "no-border">対応バッテリー</dt>
          <dd class = "no-border"><%= battery_type(@esc) %></dd>
        </dl>
        <cite class = "text-muted small text-right">スペック引用<br><%= link_to "＜#{@esc.maker.maker_name}website＞#{@esc.name}", @esc.maker_url %></p></cite>
      </blockquote>
    </div>
  </div>
  <div class = "blank-area2 col-sm-1 col-md-1 col-lg-1 hidden-xs"></div>

  <div class = "blank-area2 col-sm-1 col-md-1 col-lg-1 hidden-xs"></div>
  <div class = "col-xs-12 col-sm-10 col-md-10 col-lg-10 item-info-area">
    <div class = "col-xs-12 col-sm-4"><h3 class = "text-center">INFORMATION</h3></div>
    <div class= "col-xs-12 col-sm-8">
        <%= simple_format(@esc.information) %>
    </div>
  </div>
  <div class = "blank-area2 col-sm-1 col-md-1 col-lg-1 hidden-xs"></div>
</div>

<div class="row item-comments">
  <div class = "blank-area2 col-sm-1 col-md-1 col-lg-1 hidden-xs"></div>
  <div class = "col-xs-12 col-sm-10 col-md-10 col-lg-10">
    <h2><small>Comment on</small> <%= @esc.name %></h2>
    <% if logged_in? %>
      <p>コメント投稿</p>
      <%= render 'microposts/post_form', {micropost: @micropost, item: @esc, post_item: @post_item} %>
      <%= render 'microposts/microposts', microposts: @microposts %>

    <% else %>
      <div class = "well col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <p class = "text-warning">ログインするとコメントの閲覧と投稿ができます</p>
        <%= render 'sessions/form' %>
      </div>
    <% end %> 

  </div>
  <div class = "blank-area1 col-sm-1 col-md-1 col-lg-1 hidden-xs"></div>
</div>
  
<div class="row equipped">
  <div class = "blank-area1 col-sm-1 col-md-1 col-lg-1 hidden-xs"></div>
  <div class = "col-xs-12 col-sm-10 col-md-10 col-lg-10 blank-area1">
    <h2 class = "on-black">EQUIPPED MACHINES</h2>
    <% if @machines.empty? %>
      <p class = "unregistered">まだ登録されていません</p>
    <% else %>
      <%= render 'machines/machines', machines: @machines %>
    <% end %>
  </div>

</div>