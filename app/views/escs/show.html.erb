<% if logged_in? && current_user.admin? %>
  <%= link_to 'アイテム編集', edit_esc_path(@esc) %>
<% end %>

<div class="row">
  <h2 class = "text-center"><%= @esc.name %></h2>
  <div class = "col-sm-6">
    <%= image_tag @esc.image_url, class: 'img-100' %> 
     <cite class = "text-muted small text-right">画像引用：<%= link_to "＜#{@esc.maker.maker_name}website＞#{@esc.name}", @esc.maker_url %></p></cite>
  </div>
  <div class = "col-sm-6">
    <blockquote>
      <p>メーカー：<%= @esc.maker.maker_name %></p>
      <p>定価：<%= @esc.list_price %> 円</p>
      <p>モータータイプ<%= @esc.motor_type %></p>
      <p>センサー有無：<%= @esc.sencor %></p>
      <p>対応ターン数：<%= @esc.turn %>以上</p>
      <p>入力電圧：<%= @esc.input_current %></p>
      <p>瞬間最大電流：<%= @esc.output_current_max %></p>
      <p>連続最大電流：<%= @esc.output_current %></p>
      <p>抵抗値：<%= @esc.ohm %></p>
      <p>BEC(-A/-V)：<%= @esc.bec %></p>
      <p>対応バッテリー：<%= battery_type(@esc) %></p>
      <cite class = "text-muted small text-right">スペック引用：<%= link_to "＜#{@esc.maker.maker_name}website＞#{@esc.name}", @esc.maker_url %></p></cite>
    </blockquote>
  </div>
</div>
<div class="row item_info">
  <div class="panel panel-default">
    <div class="panel-heading">Information</div>
    <div class="panel-body">
        <%= simple_format(@esc.information) %>
    </div>
  </div>
</div>
<h3><%= @esc.name %>へのコメント</h3>
<div class = "row">
  <% if logged_in? %>
    <%= render 'microposts/microposts', microposts: @microposts %>
    <p>コメント投稿</p>
    <%= render 'microposts/post_form', {micropost: @micropost, item: @esc, post_item: @post_item} %>
  <% else %>
    <div class = "well col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <p class = "text-warning">ログインするとコメントの閲覧と投稿ができます</p>
      <%= render 'sessions/form' %>
    </div>
  <% end %> 
</div>

<div>
  <h3><%= @esc.name %>搭載マシン</h3>
    <%= render 'machines/machines', machines: @machines %>
</div>