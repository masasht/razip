<div class = "row item-list">
  <div class="col-xs-12">
    <table class="table">
      <thead>
        <tr>
          <th>ESC</th>
          <th class = "hidden-xs">メーカー</th>
          <th class = "hidden-xs">定価</th>
          <th>モーター</th>
          <th>対応ターン</th>
          <th>連続最大電流</th>
          <th>リポ</th>
        </tr>
      </thead>
      <tbody>
        <% escs.each do |esc| %>
          <tr>
            <td><%= link_to esc.name, esc %></td>
            <td class = "hidden-xs"><%= esc.maker.maker_name %></td>
            <td class = "hidden-xs"><%= esc.list_price %><span class = "list-specs"> 円</span></td>
            <td><%= esc.motor_type %></td>
            <td><%= esc.turn %><span class = "list-specs">以上</span></td>
            <td><%= esc.output_current %><span class = "list-specs"> A</span></td>
            <td><%= esc.lipo %><span class = "list-specs">セル</span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class = "paginate-center">
  <%= paginate escs %>
</div>



