<div class = "row item-list">
  <div class="col-xs-12">
    <table class="table">
      <thead>
        <tr>
          <th>サーボ</th>
          <th class = "hidden-xs">メーカー</th>
          <th class = "hidden-xs">定価</th>
          <th>デジアナ</th>
          <th class = "hidden-xs">>形状</th>
          <th>スピード(6V)</th>
          <th>トルク(6V)</th>
        </tr>
      </thead>
      <tbody>
        <% servos.each do |servo| %>
          <tr>
            <td><%= link_to servo.name, servo %></td>
            <td class = "hidden-xs"><%= servo.maker.maker_name %></td>
            <td class = "hidden-xs"><%= servo.list_price %><span class = "list-specs"> 円</span></td>
            <td><%= servo.servo_type %></td>
            <td class = "hidden-xs"><%= servo.profile %></td>
            <td><%= servo.speed_60 %><span class = "list-specs">sec/60°</span></td>
            <td><%= servo.torque_60 %><span class = "list-specs">kg・cm</span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class = "paginate-center">
  <%= paginate servos %>
</div>
