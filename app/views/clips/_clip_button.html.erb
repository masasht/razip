
<% if current_user.fastening?(machine) %>
  <%= form_for(current_user.clips.find_by(machine_id: machine.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :machine_id, machine.id %>
    <%= f.submit 'クリップ中', class: 'btn btn-info' %>
  <% end %>
<% else %>
  <%= form_for(current_user.clips.build) do |f| %>
    <%= hidden_field_tag :machine_id, machine.id %>
    <%= f.submit 'クリップ！', class: 'btn btn-primary' %>
  <% end %>
<% end %>


